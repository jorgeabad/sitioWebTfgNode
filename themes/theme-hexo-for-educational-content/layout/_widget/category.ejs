<!-- _widget/category -->
<% if (site.categories.length){ %>
	<div class="widget">
		<h4><%= __('categories') %></h4>
		<ul class="tag_box inline list-unstyled">
		<% site.categories.sort('name').each(function(item){ %>
			<li><a href="<%- config.root %><%- item.path %>"><%= item.name %><span><%= item.posts.length %></span></a></li>

		<% }); %>
		</ul>
	</div>
<% } %>


<% if (site.categories.length){ %>
<div class="widget">
  <h3 class="title"><%= __('categories') %></h3>

   <% site.categories.each(function(item){ %>

<% if (!item.parent) {%>
		<h4><a href="<%- config.root %><%- item.path %>"><%= item.name %> </a> <small>(<%= item.posts.length %>)</small></h4>


<% }else{%>
   <li><a href="<%- config.root %><%- item.path %>"> <%= item.name %> </a><small>(<%= item.posts.length %>)</small></li>

    <% } %>
  <% }); %>
</div>
<% } %>

<div class="sidebar-module">
<% if (site.categories.length){ %>
    <h3><%= __('categories') %></h3>
    <div class="widget">
      <%- list_categories(site.categories,{depth: 0}) %>
  </div>
<% } %>
</div>
